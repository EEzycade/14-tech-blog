<div id="edit-post-div">
    <button class="edit-btn btn"><a href="/dashboard">Back to Dashboard</a></button>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title" class="form-label">Edit Title</label>
            <input name="post-title" type="text" class="form-control" value="{{post.title}}" />
            <label for="post-content" class="form-label">Edit Content</label>
            <textarea name="post-content" class="form-control" rows="5">{{ post.post_content }}</textarea>
        </div>
        <button type="submit" class="edit-btn btn">Save post</button>
        <button type="button" class="delete-post-btn edit-btn btn">Delete post</button>
    </form>
</div>

