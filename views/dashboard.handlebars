<section id="create-post-section">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title" class="form-label">Title</label>
      <input type="text" id="post-title" class="form-control" name="post-title" />
    </div>
    <div>
      <label for="post-url" class="form-label">Content</label>
      {{!-- <input id="post-url" class="form-control" name="post-url" /> --}}
      <textarea id="post-url" name="post-url" class="form-control" rows="5"></textarea>
    </div>
    <button type="submit" id="create-post-btn" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section id="your-posts">
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> home-post post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>