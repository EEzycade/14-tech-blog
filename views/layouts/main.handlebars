            </nav>
        </header>

        <main>
            {{{ body }}}
        </main>

        <footer>
            Created by Cade Ellsworth
        </footer>
    </div>

    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}

</body>

</html>